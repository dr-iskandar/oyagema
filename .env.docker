# Konfigurasi Docker untuk Oyagema
# Salin file ini ke .env untuk deployment Docker

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=oyagema

# Next.js
NEXTAUTH_URL=http://localhost:8996
NEXTAUTH_SECRET=generate_secret_with_openssl_rand_base64_32

# Database URL untuk Prisma
DATABASE_URL=postgresql://postgres:secure_password_here@postgres:5432/oyagema?schema=public

# Email (untuk donation service)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# Port konfigurasi
PORT=8996
DONATION_SERVICE_URL=http://donation-service:5000