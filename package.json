{
  "name": "oyagema",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-static",
    "copy-static": "cp -r public .next/standalone/ && mkdir -p .next/standalone/public/uploads",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "lint": "next lint",
    "type-check": "./scripts/check-types.sh",
    "setup-hooks": "./scripts/setup-hooks.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "npx prisma db seed",
    "create-admin": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/create-admin.ts",
    "postinstall": "npm run prisma:generate",
    "migrate:deploy": "prisma migrate deploy",
    "deploy:pm2": "./scripts/deploy-pm2.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^2.4.3",
    "chokidar": "^4.0.3",
    "framer-motion": "^10.16.4",
    "jsmediatags": "^3.9.7",
    "jsmediatags-web": "^0.0.4",
    "music-metadata": "^7.13.4",
    "next": "^14.0.4",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^4.11.0",
    "tailwindcss": "^3.3.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.4",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
